<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>

    <main class="container-main">
        <div class="principal-main">
            <h2 id="title-login">Registrate</h2>
            <form action="/users" method="post" class="form-login">
                <div class="login-username">
                    <input type="text" name="firstname" id="username"  value placeholder=""
                        required />
                    <label for="username">Primer Nombre *</label>
                </div>
                <div class="login-username">
                    <input type="text" name="lastname" id="username"  value placeholder=""
                        required />
                    <label for="username">Segundo Nombre *</label>
                </div>
                <div class="login-username">
                    <input type="email" name="email" id="email"  value placeholder=""
                        required />
                    <label for="email">Correo *</label>
                </div>
                <div class="login-contrasena">
                    <input type="password" name="password" id="password" value placeholder="" required />
                    <label for="password">Contraseña *</label>
                </div>
                <div class="login-contrasena">
                    <input type="password" name="re-password" id="password" value placeholder="" required />
                    <label for="password">Confirma Contraseña *</label>
                </div>
                
                <div class="button-sesion">
                    <input type="submit" value="Registrate" />
                </div>
            </form>
            <div><a href="/users/login">
                    <button class="button-register">Iniciar sesión</button></a>
            </div>
        </div>
    </main>
   <%- include('../partials/footer') %>
</body>
</html>
