        <!-- END GRID VARIOS PANTALONES -->
        <h2>Pantalones</h2>
        <!-- PANTALONES -->
        <div class="img-section-pantalones">
          <img src="/img/pantalonh2.jpg" alt="" />
        </div>
        <div class="section-category-pantalones">
          <!-- **************************************** -->
          <% productsPantalones.forEach(product => { %>

          <div class="flip-card-pantalones">
            <div class="flip-card-inner-pantalones">
              <div class="flip-card-front-pantalones">
                <img src="<%= product.image %>" alt="" />
              </div>
              <div class="flip-card-back-pantalones">
                <a href="/products/<%= product.id %>/detail">
                  <h1><%= product.name %></h1>
                  <img src="<%= product.image %>" alt="" />
                  <h3>$ <%= product.price %></h3>
                  <h3><%= product.description %></h3>
                  <h3><%= product.marca.name %></h3>
                </a>
              </div>
            </div>
          </div>
          <% }); %>
